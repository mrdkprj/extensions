{

  "manifest_version": 3,
  "name": "YtAdBlock",
  "version": "1.0",

  "description": "YtAdBlock",

  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },

  "permissions": [
    "declarativeNetRequest"
  ],

  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "yt_ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },

  "host_permissions": [
    "*://*.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["block.css"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]

}
