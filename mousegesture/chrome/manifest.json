{

  "manifest_version": 3,
  "name": "MouseGesture",
  "version": "1.0",

  "description": "MouseGesture",

  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },

  "permissions": [
    "background",
    "downloads",
    "scripting",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_title": "Gesture - Enabled"
  },

  "background": {
    "service_worker": "background.js"
  }

}
